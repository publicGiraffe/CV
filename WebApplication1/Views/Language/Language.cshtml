
@model WebApplication1.Models.PersonalInfo
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    ViewData["Language"] = Localizer["Language"];
    ViewData["Dear"] = Localizer["Dear"];
    ViewData["here you can add"] = Localizer["here you can add"];
    ViewData["how well are you acquainted with some languages"] = Localizer["how well are you acquainted with some languages"];
    ViewData["Add Something."] = Localizer["Add Something."];
    ViewData["Skip Step."] = Localizer["Skip Step."];
    
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/mainStyle.css">
    <title>@ViewData["Language"]</title>
</head>
<body>
    <h3>@ViewData["Language"]</h3>
    <h4>@ViewData["Dear"], @Model.FirstName, @ViewData["here you can add"] <br> @ViewData["how well are you acquainted with some languages"]. </h4>
    <div class="half-board">
        <div>
            <input class=" button2" type="submit" value="@ViewData["Add Something."]" onclick="location.href='@Url.Action("LanguageAdd", "Language")'" />
        </div>
        <div>
            <input class=" button2" type="submit" value="@ViewData["Skip Step."]" onclick="location.href='@Url.Action("Experience", "Experience")'" />
        </div>
    </div>
    <footer>
        <div class="row">
            <div class="col-sm-6">
                <p>&copy; 2020 - Natalie </p>
            </div>
            <div class="col-sm-6 text-right">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
        </div>
    </footer>
</body>
</html>

